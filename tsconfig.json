{
  "compilerOptions": {
    "typeRoots": [
      "@types",
      "./node_modules/@types",
    ],
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "./build",
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true
  }
}